<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@android:color/black">
    <TextView
            android:hint="@string/_0_0"
            android:textAlignment="viewEnd"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:layout_width="253dp"
            android:layout_height="71dp"
            android:id="@+id/tvResult" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:longClickable="true"/>
    <Button
            android:text="@string/ac"
            android:textSize="30sp"
            android:onClick="onClickButton"
            android:textColor="@android:color/white"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:id="@+id/btAc" app:layout_constraintStart_toEndOf="@+id/tvResult"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            android:background="@color/colorBt2"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="431dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvResult" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@android:color/black">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:layout_weight="1">
            <Button
                    android:text="7"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent" android:id="@+id/bt7" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="8"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent" android:id="@+id/bt8" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="9"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent" android:id="@+id/bt9" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="+"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent" android:id="@+id/btMas" android:layout_weight="1"
                    android:background="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="68dp" android:layout_weight="1">
            <Button
                    android:text="4"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bt4" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="5"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bt5" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="6"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bt6" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="-"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btMenos" android:layout_weight="1"
                    android:background="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="76dp" android:layout_weight="1">
            <Button
                    android:text="1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bt1" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="2"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bt2" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="3"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bt3" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="X"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btProducto" android:layout_weight="1"
                    android:background="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="75dp" android:layout_weight="1">
            <Button
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_height="match_parent" android:id="@+id/bt0" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="."
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btPunto" android:layout_weight="1"
                    android:background="@android:color/white"/>
            <Button
                    android:text="="
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btIgual" android:layout_weight="1"
                    android:background="@color/colorBt2"/>
            <Button
                    android:text="/"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="onClickButton"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btDivision" android:layout_weight="1"
                    android:background="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>